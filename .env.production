# MySQL Database Configuration - Variables will be loaded from environment
# Keep these empty in the file and set them via environment variables
MYSQL_HOST=
MYSQL_USER=
MYSQL_PASSWORD=
MYSQL_DATABASE=
MYSQL_PORT=

# Session secret - Change this in production
SESSION_SECRET=secure_session_secret_for_production

# Session configuration
COOKIE_MAX_AGE=86400000  # 24 horas em milissegundos (1 dia)
COOKIE_SECURE=true       # Usar HTTPS em produção
COOKIE_SAME_SITE=lax     # Configuração para navegações normais

# Uploads directory
UPLOADS_DIR=./uploads